import ("sweetie_bot_resource_control");
import ("sweetie_bot_resource_client_usage_example");

displayComponentTypes();

loadComponent("resource_control", "ResourceArbiter");
loadComponent("resource_client_usage_example", "ResourceClientExample");

connect( "resource_control.resource_request", 
  "resource_client_usage_example.resource_client.resource_request", 
  ConnPolicy() 
  );

connect( "resource_control.resource_assignment", 
  "resource_client_usage_example.resource_client.resource_assignment", 
  ConnPolicy() 
  );

connect( "resource_control.resource_requester_state", 
  "resource_client_usage_example.resource_client.resource_requester_state", 
  ConnPolicy() 
  );

resource_control.configure();
resource_client_usage_example.configure();

resource_control.setPeriod(1.0);
resource_client_usage_example.setPeriod(0.5);

resource_control.start();
resource_client_usage_example.start();

